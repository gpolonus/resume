{
  "name": "grif-resume",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.4.0",
    "@testing-library/user-event": "^7.2.1",
    "onchange": "^6.1.0",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-scripts": "3.3.0",
    "yamljs": "^0.3.0"
  },
  "scripts": {
    "start": "npm run build-data && react-scripts start",
    "build": "npm run build-data && react-scripts build",
    "build-data": "npx yaml2json ./data.yml > ./src/data.json",
    "start-data": "onchange './data.yml' -- npm run build-data"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
